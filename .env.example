# Content Automation Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Service API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Content Publishing Configuration
PUBLISHING_PATH=C:\Users\alima\articles
SITE_ROOT_PATH=C:\Users\alima

# Agent Configuration
QUALITY_THRESHOLD=8
MAX_RETRIES=3
LOG_LEVEL=info

# Content Sources Configuration
ENABLE_TECHCRUNCH=true
ENABLE_THEVERGE=true
ENABLE_ARSTECHNICA=true
ENABLE_HACKERNEWS=true

# Publishing Schedule
ENABLE_SCHEDULER=false
GENERATION_CRON=0 6 * * *
PUBLISH_CRON=0 */2 * * *

# Database Configuration (for production)
DATABASE_URL=your_production_database_url
REDIS_URL=your_redis_url_for_caching

# Error Reporting
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Feature Flags
ENABLE_SOCIAL_POSTING=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PERFORMANCE_MONITORING=true